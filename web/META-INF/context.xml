<?xml version="1.0" encoding="UTF-8"?>
<Context path="/ProjectGrape">
  <!--The name attribute needs to match the ConnectionPool constructor-->
  <Resource auth="Container" 
            driverClassName="com.mysql.jdbc.Driver" 
            logAbandoned="true" 
            maxActive="100" 
            maxIdle="30" 
            maxWait="10000" 
            name="jdbc/users" 
            password="" 
            removeAbandoned="true" 
            removeAbandonedTimeout="60" 
            type="javax.sql.DataSource" 
            url="jdbc:mysql://localhost:3306/projectgrape" 
            username="root"/>
</Context>